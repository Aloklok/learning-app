{
  "name": "learning-app",
  "private": true,
  "version": "0.0.1",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build && npx electron-builder",
    "build:fast": "npm run build -- --dir",
    "build:signlocal": "npm run build && sudo codesign --force --deep --sign - /Users/Alok/learning-app/release/mac/日语学习应用.app",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "postinstall": "npx @electron/rebuild"
  },
  "description": "A Japanese learning application built with Electron, React, and Vite.",
  "author": "Alok",
  "build": {
    "appId": "com.yourcompany.learning-app",
    "productName": "日语学习应用",
    "asar": true,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "native-addons/speech-recognizer/build/Release/speech_recognizer.node",
        "to": "speech_recognizer.node"
      },
      {
        "from": "database/schema.sql",
        "to": "database/schema.sql"
      }, "database/schema.sql",
       "database/migrations/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSSpeechRecognitionUsageDescription": "本应用需要您的语音识别授权，以便将您的语音实时转换为文字。",
        "NSMicrophoneUsageDescription": "我们需要访问您的麦克风，以接收您输入的语音。"
      }
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "better-sqlite3": "^9.4.3",
    "chroma-js": "^3.1.2",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "framer-motion": "^12.23.12",
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-circular-progressbar": "^2.2.0",
    "react-countup": "^6.5.3",
    "react-dom": "^19.1.1",
    "react-minimal-pie-chart": "^9.1.1",
    "react-router-dom": "^7.8.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "json": "^11.0.0",
    "node-gyp": "^11.4.2",
    "prebuild-install": "^7.1.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
